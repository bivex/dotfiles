{
    "// Comment: The settings below ensure proper line breaks after each line in the copyright notice": "",
    "// Comment: Note the explicit \\n after each line to ensure proper formatting": "",

    "copyright-notice.languages": [
        "javascript",
        "typescript",
        "c",
        "cpp"
    ],

    "copyright-notice.fileExtensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".c",
        ".cpp",
        ".h",
        ".hpp"
    ],

    "copyright-notice.includeTimestamp": true,
    "copyright-notice.timestampFormat": "YYYY-MM-DD HH:mm",
    "copyright-notice.includeUpdateTime": true,
    "copyright-notice.updateTimeFormat": "YYYY-MM-DD HH:mm",

    "// Comment: IMPORTANT: Make sure each line ends with \\n and has proper spacing before it": "",
    "// Comment: The space after {updatetime} ensures proper formatting of the document": "",
    "copyright-notice.template": "/**\n * Copyright (c) {year} [Your Name], Individual Entrepreneur\n * INN: [Your Tax ID Number]\n * Created: {timestamp}\n * Last Updated: {updatetime}\n * All rights reserved. Unauthorized copying, modification,\n * distribution, or use is strictly prohibited.\n */\n\n",

    // Theme and appearance
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",

    // Font configuration optimized for Pragmata Pro
    "editor.fontFamily": "PragmataPro Mono",
    "editor.fontWeight": "normal",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.6,
    "editor.letterSpacing": 0.2,
    "editor.fontLigatures": true,

    // Editor visual enhancements
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "gutter",
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 120,

    // Indentation and formatting
    "editor.rulers": [80, 120],
    "editor.wordWrap": "off",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // Code assistance
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.matchBrackets": "always",
    "editor.showFoldingControls": "mouseover",
    "editor.foldingStrategy": "indentation",

    // Suggestions and IntelliSense
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },

    // Terminal configuration
    "terminal.integrated.fontFamily": "PragmataPro Mono",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.4,

    // Workbench enhancements
    "workbench.editor.enablePreview": false,
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.tabSizing": "fit",
    "workbench.startupEditor": "welcomePage",
    "workbench.activityBar.location": "default",

    // File explorer
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // Performance optimizations
    "editor.semanticHighlighting.enabled": true,
    "editor.hover.delay": 300,
    "editor.quickSuggestionsDelay": 100,

    // Git integration
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,

    "remote.SSH.remotePlatform": {
        "wwtop": "linux"
    }
}
